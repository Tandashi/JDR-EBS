{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@twitch-bot/*": ["src/twitch-bot/*"],
      "@api/*": ["src/api/*"],
      "@common/*": ["src/common/*"],
      "@db/*": ["src/common/db/*"],
      "@services/*": ["src/common/services/*"]
    }
  },
  "include": ["src/**/*", "definitions/**/*"]
}
